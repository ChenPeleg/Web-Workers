    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run serve",
            "name": "Serve",
            "request": "launch",
            "type": "node-terminal",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Loopback:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app.js"
        }
    ]
}